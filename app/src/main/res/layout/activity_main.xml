<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculadora de Juros"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textAlignment="center"/>

        <RadioGroup
            android:id="@+id/rgpGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/btnJuros">

            <RadioButton
                android:id="@+id/btnJuros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="#890FF999"
                android:foregroundTintMode="src_over"
                android:text="Juros" />

            <RadioButton
                android:id="@+id/btnCapital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capital" />

            <RadioButton
                android:id="@+id/btnTaxa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taxa" />

            <RadioButton
                android:id="@+id/btnPrazo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prazo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp" />

        </RadioGroup>

        <TextView
            android:id="@+id/viewJuros"
            android:layout_width="82dp"
            android:layout_height="30dp"
            android:text="Juros:"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtJuros"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Juros"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/viewCapital"
            android:layout_width="79dp"
            android:layout_height="30dp"
            android:text="Capital:"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtCapital"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Capital"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/viewTaxa"
            android:layout_width="82dp"
            android:layout_height="30dp"
            android:text="Taxa:"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtTaxa"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Taxa"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/viewPrazo"
            android:layout_width="81dp"
            android:layout_height="30dp"
            android:text="Prazo:"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/txtPrazo"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Prazo"
            android:textColor="@color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:alpha="0.99"
            android:text="Resultado"
            android:textAlignment="center"
            android:textSize="24sp"
            app:emojiCompatEnabled="false" />

        <Button
            android:id="@+id/btnCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="0.9"
            android:text="Calcular" />

        <Button
            android:id="@+id/btnLimpar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleX="0.9"
            android:text="Limpar" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>